---
// 埋め込みコードを生成するコンポーネント
const { slideId, pageNum, baseUrl } = Astro.props;

// 埋め込みコードを生成
// 本番環境のURLを使用
const siteUrl = typeof baseUrl === 'string' ? baseUrl : 'https://slide-tubone24.pages.dev';
const embedUrl = `${siteUrl}/embed/${slideId}/${pageNum}`;
const iframeCode = `<iframe src="${embedUrl}" width="100%" height="500" style="border:none;max-width:800px;" allowfullscreen></iframe>`;
---

<div class="embed-code-container">
    <h3>埋め込みコード</h3>
    <div class="code-wrapper">
        <pre class="embed-code">{iframeCode}</pre>
        <button class="copy-button" aria-label="コードをコピー">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
            <span>コピー</span>
        </button>
    </div>
    <div class="embed-preview">
        <h4>プレビュー</h4>
        <iframe src={embedUrl} width="100%" height="300" style="border:none;" allowfullscreen></iframe>
    </div>
</div>

<script>
    // コピーボタンの機能
    document.addEventListener('DOMContentLoaded', () => {
        const copyButton = document.querySelector('.copy-button');
        const embedCode = document.querySelector('.embed-code');
        
        if (copyButton && embedCode) {
            copyButton.addEventListener('click', async () => {
                try {
                    await navigator.clipboard.writeText(embedCode.textContent || '');
                    
                    // コピー成功時のフィードバック
                    const originalText = copyButton.querySelector('span').textContent;
                    copyButton.querySelector('span').textContent = 'コピーしました！';
                    copyButton.classList.add('copied');
                    
                    // 元のテキストに戻す
                    setTimeout(() => {
                        copyButton.querySelector('span').textContent = originalText;
                        copyButton.classList.remove('copied');
                    }, 2000);
                } catch (err) {
                    console.error('クリップボードへのコピーに失敗しました:', err);
                    alert('コピーに失敗しました。手動でコードを選択してコピーしてください。');
                }
            });
        }
    });
</script>

<style>
    .embed-code-container {
        margin: 2rem 0;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }
    
    h3 {
        margin-top: 0;
        margin-bottom: 1rem;
        font-size: 1.2rem;
        color: #2c3e50;
    }
    
    .code-wrapper {
        position: relative;
        margin-bottom: 1.5rem;
    }
    
    .embed-code {
        background-color: #2c3e50;
        color: #ecf0f1;
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
        font-family: monospace;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
        white-space: pre-wrap;
        word-break: break-all;
    }
    
    .copy-button {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        border: none;
        border-radius: 4px;
        padding: 0.3rem 0.6rem;
        font-size: 0.8rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.3rem;
        transition: background-color 0.2s;
    }
    
    .copy-button:hover {
        background-color: rgba(255, 255, 255, 0.3);
    }
    
    .copy-button.copied {
        background-color: #27ae60;
    }
    
    .embed-preview {
        margin-top: 1.5rem;
    }
    
    .embed-preview h4 {
        margin-top: 0;
        margin-bottom: 0.8rem;
        font-size: 1rem;
        color: #2c3e50;
    }
    
    @media (max-width: 768px) {
        .embed-code-container {
            padding: 1rem;
        }
        
        .embed-code {
            font-size: 0.8rem;
        }
    }
</style>
